<div class="container">
  <h2>Posts</h2>

  <table class="table">
    <thead>
      <tr>
        <td>Id</td>
        <td>Title</td>
        <td>Content</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title.first(20) << " ..." %></td>
          <td><%= post.content.first(50) << " ..." %></td>
          <td><%= link_to "View", "#", class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
